<Window x:Class="Task3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" KeyDown="Window_KeyDown">
    <Canvas x:Name="canvas">
        <Canvas.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFC30F0F" Offset="1"/>
                <GradientStop Color="#FFFDFDFD" Offset="0.029"/>
                <GradientStop Color="#FFFBF6F6" Offset="0.944"/>
            </LinearGradientBrush>
        </Canvas.Background>
        <Rectangle x:Name="racket" HorizontalAlignment="Left" Height="19" Fill="Black" VerticalAlignment="Top" Width="70" Canvas.Left="365" Canvas.Top="382"/>
        <Label Content="0" x:Name="label"/>
    </Canvas>
</Window>
